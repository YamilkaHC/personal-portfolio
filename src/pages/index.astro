---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'

import PageHead from '@/components/PageHead.astro'
import { Button, buttonVariants } from '@/components/ui/button'
import { Typography } from '@/components/ui/typography'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getRecentPosts } from '@/lib/data-utils'
import { Download, Github, Linkedin } from 'lucide-react'

const blog = await getRecentPosts(SITE.featuredPostCount)
---

<Layout>
  <PageHead slot="head" title="Home" />
  <section
    class="border-foreground flex min-h-[calc(100svh_-_5rem)] items-end rounded-2xl border px-4 py-4"
  >
    <Typography className="w-fit !text-8xl font-medium" variant="h1">
      Hi there, I'm <strong class="text-primary">Yamilka Cosme</strong>
    </Typography>
  </section>
  <section class="flex w-full flex-col items-end gap-8 py-4 md:flex-row">
    <div class="flex w-full flex-col justify-center md:w-1/2">
      <Typography variant="h2" className="text-4xl font-bold md:text-6xl">
        Some information...
      </Typography>
    </div>

    <div class="grid h-[500px] w-full grid-cols-4 grid-rows-4 gap-4 md:w-1/2">
      <!-- BLOCK 1 -->
      <Button
        variant="default"
        className="col-span-1 row-span-1 flex h-full w-full items-center justify-center rounded-2xl border p-4 transition-all"
      >
        Download CV
        <Download className="h-5 w-5" />
      </Button>

      <!-- BLOCK 2 -->
      <Link
        external
        href="https://www.linkedin.com/in/yamilkacosme/"
        class="col-span-1 row-span-1 flex flex-col items-start justify-between rounded-2xl border bg-[#006699]/10 p-4 capitalize transition-all hover:shadow-md"
      >
        <Linkedin
          className="h-7 w-7 rounded-sm bg-[#006699] p-1.5 text-white"
        />
        <Typography variant="p" className="!m-0 text-xs"
          >Yamilka Cosme | LinkedIn</Typography
        >
      </Link>

      <!-- BLOCK 3 -->
      <Link
        external
        href="https://www.linkedin.com/in/yamilkacosme/"
        class="border-card-foreground col-span-1 row-span-2 flex flex-col items-start justify-between rounded-2xl border p-4 capitalize transition-all hover:shadow-md"
      >
        <Github className="bg-foreground h-7 w-7 rounded-sm p-1.5 dark:text-background text-white" />
        <div class="flex flex-col gap-2">
          <Typography variant="p" className="!m-0 text-xs"
            >@Yamilka Cosme</Typography
          >
          <Button variant="outline" size="sm">Follow me</Button>
        </div>
      </Link>

      <div
        class="bg-muted col-span-1 row-span-2 rounded-2xl border p-4 transition-all hover:shadow-md"
      >
        5
      </div>
      <div
        class="border-card-foreground col-span-2 row-span-1 rounded-2xl border p-4 transition-all hover:shadow-md"
      >
        7
      </div>
      <div
        class="bg-muted col-span-1 row-span-1 rounded-2xl border p-4 transition-all hover:shadow-md"
      >
        4
      </div>
      <div
        class="border-card-foreground col-span-1 row-span-1 rounded-2xl border p-4 transition-all hover:shadow-md"
      >
        3
      </div>
      <div
        class="border-card-foreground col-span-2 row-span-2 rounded-2xl border p-4 transition-all hover:shadow-md"
      >
        1
      </div>
      <div
        class="border-card-foreground col-span-2 row-span-1 rounded-2xl border p-4 transition-all hover:shadow-md"
      >
        2
      </div>
    </div>
  </section>
  <section class="flex flex-col gap-y-4">
    <h2 class="text-2xl font-medium">Latest posts</h2>
    <ul class="flex flex-col gap-y-4">
      {
        blog.map((post) => (
          <li>
            <BlogCard entry={post} />
          </li>
        ))
      }
    </ul>
    <div class="flex justify-center">
      <Link
        href="/blog"
        class={buttonVariants({ variant: 'ghost' }) + ' group'}
      >
        See all posts <span
          class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
  </section>
</Layout>
