---
import Link from '@/components/Link.astro'
import ThemeToggle from '@/components/ThemeToggle.astro'
import { NAV_LINKS, SITE } from '@/consts'
import { Image } from 'astro:assets'
import logo from '../../public/static/logo.png'
import { Button } from './ui/button'
---

<div>
  <div
    class="mx-auto flex  items-center  justify-between gap-4 px-4 py-3"
  >
    <Link href="/" class="flex shrink-0 items-center justify-center gap-3">
      <Image src={logo} alt="Logo" class="size-24 relative -left-2  h-fit " />
    </Link>
    <div class="flex items-center gap-4">
      <nav class="flex items-center gap-4 text-sm sm:gap-6">
        {
          NAV_LINKS.map((item) => (
            <Link
              href={item.href}
              class=" hover:text-primary capitalize transition-colors"
            >
              {item.label}
            </Link>
          ))
        }
      </nav>
      <ThemeToggle transition:persist />
      <Button
        variant="default" size="sm" >Contact me</Button>
    </div>
  </div>
</div>
